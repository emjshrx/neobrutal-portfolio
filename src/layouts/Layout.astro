---
import Header from "../components/CustomHeader.astro";
export interface Props {
  title: string;
  currentPage: string;
}

const { title, currentPage } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  <body class="h-screen flex bg-white flex-col">
    <Header currentPage={currentPage} />
    <div class="grow bg-green">
      <slot />
    </div>
  </body>
  <style is:global>
    @font-face {
      font-family: "Sudo Var";
      src: url("/fonts/SudoVariable.ttf") format("truetype");
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }
    html {
      font-family: "Sudo Var", sans-serif;
    }

    .shadow-hard {
      box-shadow: 2px 4px 0px 0px #000000;
    }

    button {
      -webkit-tap-highlight-color: transparent;
    }
  </style>
</html>
